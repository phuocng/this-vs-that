---
layout: layouts/base.njk
---
{% set previousPost = collections.all | getPreviousCollectionItem(page) %}
{% set nextPost = collections.all | getNextCollectionItem(page) %}

<div class="container">
    <div class="header">
        <a class="header__link" href="/">/home</a>
        <a class="header__link header__link--primary" href="https://github.com/phuocng/this-vs-that">Star me on GitHub</a>
    </div>
    <div class="post">
        <h1 class="post__heading">{{ title }}</h1>
        <div class="post__content">{{ content | safe }}</div>
    </div>
    <div class="nav">
    {% if previousPost %}<a class="nav__item nav__item--prev" href="{{ previousPost.url }}">{{ index - 1 }}: {{ previousPost.data.title }}</a>{% endif %}
    {% if nextPost %}<a class="nav__item nav__item--next" href="{{ nextPost.url }}">{{ index + 1 }}: {{ nextPost.data.title }}</a>{% endif %}
    </div>
    {% include "follow.njk" %}
</div>